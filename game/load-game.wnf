byte chbas = @   // High address of font
word start

procedure copyFont()
begin
  start := @makeword(0, chbas)
  @ACTIVATE_ROM()
  @move(start, buffer, 1024)
  @ACTIVATE_RAM()
  @move(buffer, start, 1024)
end

procedure init()
begin
  @initCurrentDisk()
  wait := 1
  buffer := $A700 // Startadresse - 1024 ($AB00 - $400)

  @INIT_SIMPLE_64K()
  copyFont()

  @init_fastScreen($bc40)
  @init_set_bytes_per_line(40)

//  @loadGreetings()

  // load game

  loadAsciiShip()
  @sleep(wait)
end

