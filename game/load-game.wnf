byte array oxygenefont[1] = ['D1:FONT.COM']

procedure loadFont()
begin
  @fast_gotoxy(12, 10)
  @printff('Load font...   ')
  oxygenefont[1] := @getCurrentDisk()
  @binload(adr:oxygenefont, buffer)
end

